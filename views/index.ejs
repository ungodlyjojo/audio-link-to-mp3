<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>ditto</title>
  </head>
  <body>
    <!-- Top Container w Title & input field-->
    <div class="top-container">
      <form action="/convert-mp3" method="POST" id="form">
        <h1><i class="fab fa-youtube"></i>ditto.</h1>
        <h4>let's transform that video ID.</h4>
        <div>
          <input type=" name="videoID" placeholder="Video ID"><button
            id="convert-btn"
          >
            convert
          </button>
        </div>
      </form>
    </div>
    <!-- Bottom Container for error message/download link-->
    <div class="bottom-container">
      <% if(typeof success != "undefined" && success) { %>
      <div class="success">
        <p><%= song_title %></p>
        <a href="<%= song_link  %>"
          ><button id="download-btn">DOWNLOAD</button></a
        >
        <link rel="stylesheet" href="" />
      </div>
      <% } else if(typeof success != "undefined" && !success) {%>
      <div class="errors">
        <p><%= message %></p>
      </div>
      <% } %>
    </div>
  </body>
</html>
